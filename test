<body>

<h1>我的商品列表</h1>

<!-- 商品 1 -->
<div class="product">
    <img src="https://via.placeholder.com/250x150" alt="商品圖片">
    <h3>商品 A</h3>
    <p>價格：<span class="price">300</span> 元</p>
    <button onclick="addToCart('商品 A', 300)">加入購物車</button>
</div>

<!-- 商品 2 -->
<div class="product">
    <img src="https://via.placeholder.com/250x150" alt="商品圖片">
    <h3>商品 B</h3>
    <p>價格：<span class="price">500</span> 元</p>
    <button onclick="addToCart('商品 B', 500)">加入購物車</button>
</div>

<!-- 購物車區塊 -->
<div id="cart">
    <h2>購物車</h2>
    <ul id="cartList"></ul>
    <p>總金額：<span id="total">0</span> 元</p>
</div>

<script>
    let total = 0;

    function addToCart(name, price) {
        const list = document.getElementById("cartList");
        const item = document.createElement("li");
        item.textContent = `${name} - ${price} 元`;
        list.appendChild(item);

        total += price;
        document.getElementById("total").textContent = total;
    }
</script>

